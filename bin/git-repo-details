#!/usr/bin/ruby

require 'rubygems'
require 'github_api'
require 'json'
require 'rest-client'

def usage 
  puts <<-EOS
    usage: #{$0} <name>
    where:
      name => short name of the repository
  EOS
  exit 1
end
ARGV.size == 1 || usage

def bad_environment
  STDERR.puts "#{$0} requires GITHUB_USER and GITHUB_TOKEN to be set in your environment"
  exit 1
end
ENV["GITHUB_USER"] && ENV["GITHUB_TOKEN"] || bad_environment

USER = ENV["GITHUB_USER"]
TOKEN = ENV["GITHUB_TOKEN"]

github = Github.new(:oauth_token => TOKEN)
begin
  repo = github.repos.get( "charms",  ARGV[0] )
rescue => e
  STDERR.puts e.to_s
  exit 1
end

puts repo.to_json
